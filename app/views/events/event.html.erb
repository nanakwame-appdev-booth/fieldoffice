<div class="container" style="padding-top:40px">
  <div class="row">
    <div class="col-4" style="text-align:left">
      <h1 style="font-weight:bold;font-size:30px"><%=@this_event.name%></h1>
    </div>
</div>

<div class="container" style="padding-bottom:50px">
  <div class="row">
    <div class="col-6" style="text-align:left">
      <h3 style="text-align:center">Event Details</h3>
      <div> <strong>Description:</strong> <%=@this_event.description%> </div>
      <div> <strong>Start Time:</strong> <%=@this_event.start_date%> </div>
      <div> <strong>End Time:</strong> <%=@this_event.end_date%> </div>
    </div>

    <div class="col-6" style="text-align:left">
      <h3 style="text-align:center">Event Statistics</h3>
      <div> <strong>Attendance:</strong> <%=@attendance.count%>
      <div> <strong>Donations:</strong> $<%=@donations.sum(:contribution)%>
    </div>

  </div>

</div>

<div class="container">
  <div class="row">
    <div class="col-6" style="text-align:left">
      <h3 style="text-align:center">Track Attendance</h3>

      <form action="/event/add_attendee" target="_self">
        <div>
          <label class="form-label" for="event_id">Event ID</label>
          <input class=form-control" id="event_id" name="id" value="<%=@this_event.id%>" readonly>
        </div>
        
        <div>
          <label class="form-label" for="fname">First Name</label>
          <input class="form-control" id="fname" name="fname" type="text">
        </div>

        <div>
          <label class="form-label" for="lname">Last Name</label>
          <input class="form-control" id="lname" name="lname" type="text">
        </div>

        <div>
          <label class="form-label" for="email">Email</label>
          <input class="form-control" id="email" name="email" type="email"> 
        </div>

        <div style="padding-top:15px">
          <button type="submit" class="btn btn-outline-primary">Add Attendee</button>
        </div>

      </form>

    </div>

    <div class="col-6" style="text-align:left">
      <h3 style="text-align:center">Track Donations</h3>
      
      <form action="/event/add_donation" target="_self">
         <div>
          <label class="form-label" for="event_id">Event ID</label>
          <input class=form-control" id="event_id" name="id" value="<%=@this_event.id%>" readonly>
        </div>
        
        <div>  
          <label class="form-label" for=attendee>Attendee</label>
          <select class="form-control" id="attendee" name="attendee">
            <%@attendance.each do |attendee|%>
              <option>
                <%=attendee.individual.id%>. <%=attendee.individual.first_name%> <%=attendee.individual.last_name%> 
              </option>
            <%end%>
          </select>
        </div>

        <div>
          <label class="form-label" for="damount">Donation Amount</label>
          $<input class="form-control" id="damount" name="damount" type="number" placeholder="0">
        </div>

        <div style="padding-top:15px">
          <button type="submit" class="btn btn-outline-primary">Record Donation</button>
        </div>

      </form>
    </div>
  </div>

</div>