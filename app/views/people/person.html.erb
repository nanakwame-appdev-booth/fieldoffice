<!--- Heading --->
<div class="container" style="padding-top:40px;text-align:left">
  <div class="row">
    <div class="col-11">
      <h1 style="font-weight:bold;font-size:30px">
        <%=@the_person.first_name%> <%=@the_person.last_name%>
      </h1>
    </div>
</div>

<form action="/people/edit_individual" target="_self">
  <!--- Personal Info --->
    <div class="container border" style="margin-top:40px;margin-bottom:20px;text-align:left;padding:20px"> 
      <div class="row" style="padding-bottom:10px">
      <div class="col">
        <h4>Edit Personal Info</h4>
      </div>
    </div>
      
      <div class="row">
        <div class="col-4 mb-3">  
          <label class="form-label" for="fname"> First Name </label>
          <input class="form-control" id="fname" type="text" name="fname" value="<%=@the_person.first_name%>"> 
        </div>

        <div class="col-4 mb-3">  
          <label class="form-label" for="lname"> Last Name </label>
          <input class="form-control" id="lname" type="text" name="lname" value="<%=@the_person.last_name%>"> 
        </div>

        <div class="col-4 mb-3">  
          <label class="form-label" for="role"> Role </label>
          <input class="form-control" id="role" type="text" name="role" list="roles" value="<%=@the_person.position.title%>">
            <datalist id="roles">
            <%@list_of_roles.each do |role|%>
                <option value="<%=role.title%>">
            <%end%>
            </datalist>
        </div>

        <div class="col-6 mb-3">  
          <label class="form-label" for="email"> Email </label>
          <input class="form-control" id="email" type="text" name="email" value="<%=@the_person.email%>"> 
        </div>

        <div class="col-6 mb-3">  
          <label class="form-label" for="phone"> Phone Number </label>
          <input class="form-control" id="phone" type="text" name="phone" value="<%=@the_person.phone_number%>"> 
        </div>
      </div>
    </div>
  
  <!--- Confirm Addition or Cancel --->
    <div class="container">
      
      <div class="row">
        <div class="col-10">
        </div>

        <div class="d-grid gap-5 d-md-block" style="padding-top:20px">
          <button class="btn btn-primary" type="submit">Edit Info</button>
          <a class="btn btn-danger" href="/people/delete/<%=@the_person.id%>" role="button">Delete Record</a>
        </div>
        
      </div>
    </div>

</form>