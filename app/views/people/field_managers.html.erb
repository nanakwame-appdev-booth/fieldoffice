<div class="container-fluid" style="text-align:center">
<hr style="padding:0;margin:0">

<!--- Heading --->
<div class="container" style="padding-top:40px">
  <div class="row">
    <div class="col-1">
      <h1 style="font-weight:bold;font-size:30px">PEOPLE</h1>
    </div>

    <div class="col-10">
    </div>

    <div class="col">
      <a class="btn btn-primary" role=button href="/people/add_people">New</a>
    </div>
  </div>  

</div>

<!--- Sort --->
<form action="/people/select_role">
  <select id="role" name="role" class="form-select">

    <option>Select Role</option>

    <%@list_of_roles.each do |role|%>
      <option><%=role.title%></option>
    <%end%>

  </select>

  <button class="btn btn-outline-primary">Done</button>
</form>

</div>

<!--- Table --->
<div class="container" style="margin-top:50px">
  <div class="row">
    <div class="col">
      <table class="table table-hover">
        <th colspan="3" style="text-align:center">
          All (<%=@list_of_people.count%>)
        </th>
        <tr>
          <th>Name</th>
          <th>Role</th>
          <th>Email</th>
        </tr>

        <%@list_of_people.each do |agent|%>
        <tr>
          <td> 
            <a href="/people/<%=agent.id%>"><%=agent.first_name%> <%=agent.last_name%> </a>
          </td>
          <td> 
            <a href="/people/<%=agent.id%>"><%=agent.position.title%> </a>
          </td>
          <td> 
            <a href="/people/<%=agent.id%>"><%=agent.email%> </a>
          </td>
        </tr>

        <%end%>
        
      </table>
    </div>
  </div>

</div>